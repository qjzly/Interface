<Ui>

	<Button name="RematchSavedTargetPetsTemplate" virtual="true">
		<Size x="100" y="16"/>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture parentKey="icon" file="Interface\Icons\INV_Misc_QuestionMark">
					<Size x="14" y="14"/>
					<Anchors>
						<Anchor point="LEFT"/>
					</Anchors>
					<TexCoords left="0.075" right="0.925" top="0.075" bottom="0.925"/>
				</Texture>
				<Texture parentKey="typeIcon" file="Interface\PetBattles\PetIcon-Beast">
					<Size x="16" y="16"/>
					<Anchors>
						<Anchor point="LEFT" x="16" y="0"/>
					</Anchors>
					<TexCoords left="0.4921875" right="0.796875" top="0.50390625" bottom="0.65625"/>
				</Texture>
				<FontString parentKey="name" inherits="GameFontHighlightSmall" justifyH="LEFT" justifyV="CENTER" wordwrap="false" text="Stormlash">
					<Anchors>
						<Anchor point="LEFT" x="34" y="0"/>
						<Anchor point="RIGHT"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<HighlightTexture file="Interface\PetBattles\PetJournal" setAllPoints="true" alphaMode="BLEND">
			<Anchors>
				<Anchor point="TOPLEFT" x="17" y="0"/>
				<Anchor point="BOTTOMRIGHT"/>
			</Anchors>
			<TexCoords left="0.59804688" right="0.80625000" top="0.17480469" bottom="0.21972656"/>
		</HighlightTexture>
		<Scripts>
			<OnEnter>
				Rematch.PetOnEnter(self)
			</OnEnter>
			<OnLeave>
				Rematch.PetOnLeave(self)
			</OnLeave>
			<OnClick>
				Rematch.PetOnClick(self,button)
			</OnClick>
		</Scripts>
	</Button>

	<Frame parentKey="save" parent="RematchDialog">
		<Size x="234" y="372"/>
		<Anchors>
			<Anchor point="CENTER"/>
		</Anchors>
		<Frames>
			<Frame parentKey="team" inherits="RematchTeamTemplate">
				<Anchors>
					<Anchor point="TOP" x="0" y="-8"/>
				</Anchors>
			</Frame>
			<EditBox parentKey="teamName" autoFocus="true" letters="128" inherits="RematchInputBoxTemplate">
				<Size x="200" y="20"/>
				<Anchors>
					<Anchor point="TOP" x="0" y="-92"/>
				</Anchors>
				<Layers>
					<Layer level="ARTWORK">
						<FontString parentKey="label" inherits="GameFontNormalSmall">
							<Anchors>
								<Anchor point="BOTTOM" relativePoint="TOP" x="0" y="2"/>
							</Anchors>
							<Color r="0.8" g="0.8" b="0.8"/>
						</FontString>
					</Layer>
				</Layers>
				<Scripts>
					<OnTextChanged>
						Rematch.TeamNameOnTextChanged(self)
					</OnTextChanged>
					<OnEnterPressed>
						if Rematch.dialog.accept:IsEnabled() then
							Rematch.dialog.accept:Click()
						end
					</OnEnterPressed>
					<OnEscapePressed>
						if Rematch:IsMenuOpen() then
							Rematch:HideMenu()
						else
							Rematch.dialog:Hide()
						end
					</OnEscapePressed>
				</Scripts>
			</EditBox>
			<Frame parentKey="forTarget" inherits="RematchComboBoxTemplate">
				<Size x="170" y="32"/>
				<Anchors>
					<Anchor point="TOP" x="0" y="-128"/>
				</Anchors>
			</Frame>
			<Frame parentKey="targetPets">
				<Size x="100" y="52"/>
				<Anchors>
					<Anchor point="TOP" x="0" y="-160"/>
				</Anchors>
				<Frames>
					<Button parentArray="pets" inherits="RematchSavedTargetPetsTemplate">
						<Anchors>
							<Anchor point="TOPLEFT" x="0" y="0"/>
						</Anchors>
					</Button>
					<Button parentArray="pets" inherits="RematchSavedTargetPetsTemplate">
						<Anchors>
							<Anchor point="TOPLEFT" x="0" y="-18"/>
						</Anchors>
					</Button>
					<Button parentArray="pets" inherits="RematchSavedTargetPetsTemplate">
						<Anchors>
							<Anchor point="TOPLEFT" x="0" y="-36"/>
						</Anchors>
					</Button>
				</Frames>
			</Frame>
			<Frame parentKey="inTab" inherits="RematchComboBoxTemplate">
				<Size x="130" y="32"/>
				<Anchors>
					<Anchor point="TOP" x="0" y="-230"/>
				</Anchors>
			</Frame>
			<!-- checkbutton to save leveling pets as themselves -->
			<CheckButton parentKey="asThemselves" inherits="RematchCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOP" x="-88" y="-262"/>
				</Anchors>
				<Scripts>
					<OnClick>
						Rematch.PreferencesAsThemselvesOnClick(self)
					</OnClick>
				</Scripts>
			</CheckButton>
			<Frame parentKey="help" inherits="RematchInsetTemplate">
				<Size x="210" y="46"/> <!-- was 42 -->
				<Anchors>
					<Anchor point="BOTTOM" x="0" y="8"/>
				</Anchors>
				<Layers>
					<Layer level="ARTWORK">
						<FontString parentKey="label" inherits="GameFontNormalSmall">
							<Anchors>
								<Anchor point="BOTTOM" relativePoint="TOP" x="0" y="2"/>
							</Anchors>
							<Color r="0.8" g="0.8" b="0.8"/>
						</FontString>
						<FontString parentKey="text" inherits="GameFontHighlightSmall" justifyH="CENTER" justifyV="CENTER">
							<Anchors>
								<Anchor point="TOPLEFT" x="8" y="-6"/>
								<Anchor point="BOTTOMRIGHT" x="-8" y="6"/>
							</Anchors>
							<Color r="0.9" g="0.9" b="0.9"/>
						</FontString>
					</Layer>
				</Layers>
			</Frame>
		</Frames>
	</Frame>
</Ui>